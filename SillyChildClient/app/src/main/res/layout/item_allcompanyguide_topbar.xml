<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_destination"
        style="@style/AutoMatch"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_destination"
            style="@style/WrapMatch"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen15"
            android:singleLine="true"
            android:text="@string/destination"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/down" />
    </LinearLayout>

    <TextView
        style="@style/DividerHeight"
        android:layout_marginBottom="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen15" />

    <LinearLayout
        android:id="@+id/ll_date"
        style="@style/AutoMatch"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            style="@style/WrapMatch"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen15"
            android:singleLine="true"
            android:text="@string/date"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize15" />


        <ImageView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/down" />
    </LinearLayout>


    <TextView
        style="@style/DividerHeight"
        android:layout_marginBottom="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen15" />

    <LinearLayout
        android:id="@+id/ll_travelNumber"
        style="@style/AutoMatch"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_travelNumber"
            style="@style/WrapMatch"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen15"
            android:singleLine="true"
            android:text="@string/travelNumber"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/down" />
    </LinearLayout>
</LinearLayout>