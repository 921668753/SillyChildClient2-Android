<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@mipmap/community_rectangle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_strategy"
        style="@style/MatchWrap"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/dimen1"
        android:paddingRight="@dimen/dimen1"
        android:paddingTop="@dimen/dimen1"
        android:src="@mipmap/placeholderfigure" />

    <TextView
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen12"
        android:maxLines="3"
        android:paddingLeft="@dimen/dimen7"
        android:paddingRight="@dimen/dimen14"
        android:text="大阪3天2夜精选路线大阪3天2夜精选路线大阪3天2夜精选路线"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize11" />

    <LinearLayout
        style="@style/MatchWrap"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen7"
        android:paddingRight="@dimen/dimen7">

        <ImageView
            android:layout_width="@dimen/dimen18"
            android:layout_height="@dimen/dimen38"
            android:paddingBottom="@dimen/dimen10"
            android:paddingTop="@dimen/dimen10"
            android:src="@mipmap/avatar" />

        <TextView
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen5"
            android:singleLine="true"
            android:text="薄荷色的夏天"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize9" />

        <LinearLayout
            style="@style/WrapMatch"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen11"
                android:paddingLeft="@dimen/dimen4"
                android:paddingRight="@dimen/dimen4"
                android:src="@mipmap/community_zan" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/dimen11"
                android:text="@string/giveLike"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize9" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>