<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rcv_shoppingInfo"
    style="@style/MatchWrap"
    android:background="@drawable/shape_mallhomepage"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_good"
        style="@style/MatchWrap"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/dimen1"
        android:paddingRight="@dimen/dimen1"
        android:paddingTop="@dimen/dimen1"
        android:src="@mipmap/placeholderfigure" />

    <TextView
        android:id="@+id/tv_goodName"
        style="@style/MatchWrap"
        android:padding="@dimen/dimen10"
        android:text="兰蔻菁纯柔润丝缎唇膏口红"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize12" />

    <TextView
        android:id="@+id/tv_goodSynopsis"
        style="@style/MatchWrap"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:text="时髦黑金配色 持久显色滋润"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize12" />

    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen9">

        <TextView
            android:id="@+id/tv_goodMoney"
            style="@style/WrapWrap"
            android:maxWidth="@dimen/dimen90"
            android:paddingLeft="@dimen/dimen10"
            android:singleLine="true"
            android:text="270.00"
            android:textColor="@color/fF0000Colors"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/tv_brand"
            style="@style/AutoWrap"
            android:gravity="right"
            android:paddingLeft="@dimen/dimen10"
            android:paddingRight="@dimen/dimen10"
            android:singleLine="true"
            android:text="兰蔻"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize12" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottomLabel"
        style="@style/MatchWrap"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen9">

        <ImageView
            android:id="@+id/img_proprietary"
            android:layout_width="@dimen/dimen22"
            android:layout_height="@dimen/dimen11"
            android:layout_marginLeft="@dimen/dimen10"
            android:src="@mipmap/home_self_support" />


        <TextView
            android:id="@+id/tv_timedSpecials"
            android:layout_width="@dimen/dimen42"
            android:layout_height="@dimen/dimen11"
            android:layout_marginLeft="@dimen/dimen10"
            android:background="@drawable/shape_timedspecials"
            android:gravity="center"
            android:text="限时特价"
            android:textColor="@color/fF0000Colors"
            android:textSize="@dimen/textsize8" />


    </LinearLayout>


</LinearLayout>