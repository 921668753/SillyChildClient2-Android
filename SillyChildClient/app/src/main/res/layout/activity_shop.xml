<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.sillykid.app.homepage.goodslist.shop.ShopActivity">

    <include layout="@layout/common_title" />

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@color/whiteColors"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shopHomepage"
            style="@style/AutoMatch"
            android:gravity="center"
            android:text="@string/shopHomepage"
            android:textColor="@color/loginBackgroundColors"
            android:textSize="@dimen/textsize15" />

        <TextView style="@style/DividerHeight" />

        <TextView
            android:id="@+id/tv_allGoods"
            style="@style/AutoMatch"
            android:gravity="center"
            android:text="@string/allGoods"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize15" />

    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <FrameLayout
        android:id="@+id/main_content"
        style="@style/MatchAuto" />

</LinearLayout>