<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    style="@style/WrapWrap"
                    android:paddingBottom="@dimen/dimen10"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen15"
                    android:text="@string/flightNumber"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    style="@style/WrapWrap"
                    android:background="@color/whiteColors"
                    android:paddingLeft="@dimen/dimen5"
                    android:paddingTop="@dimen/dimen8"
                    android:text="@string/xing"
                    android:textColor="@color/redColors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_flightNumber"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:hint="@string/inputFlightNumber"
                android:paddingBottom="@dimen/dimen15"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen7"
                android:singleLine="true"
                android:textColor="@color/tabColors"
                android:textColorHint="@color/byTheDayHintColors"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize16" />


            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingBottom="@dimen/dimen10"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen15"
                    android:text="@string/deliveredAirport"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    style="@style/WrapWrap"
                    android:background="@color/whiteColors"
                    android:paddingLeft="@dimen/dimen5"
                    android:paddingTop="@dimen/dimen8"
                    android:text="@string/xing"
                    android:textColor="@color/redColors"
                    android:textSize="@dimen/textsize13" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_deliveredAirport"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:hint="@string/inputAirport"
                android:paddingBottom="@dimen/dimen15"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen7"
                android:singleLine="true"
                android:textColor="@color/tabColors"
                android:textColorHint="@color/byTheDayHintColors"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize16" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingBottom="@dimen/dimen10"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen15"
                    android:text="@string/placeDeparture"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/textsize13" />


                <TextView
                    style="@style/WrapWrap"
                    android:background="@color/whiteColors"
                    android:paddingLeft="@dimen/dimen5"
                    android:paddingTop="@dimen/dimen8"
                    android:text="@string/xing"
                    android:textColor="@color/redColors"
                    android:textSize="@dimen/textsize13" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_placeDeparture"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_placeDeparture"
                    style="@style/AutoWrap"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:hint="@string/whereDoYouStart"
                    android:paddingBottom="@dimen/dimen15"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingRight="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen7"
                    android:singleLine="true"
                    android:textColor="@color/tabColors"
                    android:textColorHint="@color/byTheDayHintColors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize16" />

                <!--<ImageView-->
                <!--style="@style/WrapWrap"-->
                <!--android:paddingRight="@dimen/dimen15"-->
                <!--android:src="@mipmap/arrow" />-->

            </LinearLayout>


            <include layout="@layout/item_bythedag_selectmodels" />

            <include layout="@layout/item_bythedag_specifycompanyguide" />


            <include layout="@layout/item_bythedag_bags" />

            <include layout="@layout/item_bythedag_contactway" />

            <include layout="@layout/common_dividerwidth1" />

            <include layout="@layout/item_singletransport_passengersnumber1" />

            <include layout="@layout/common_dividerwidth1" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dimen15"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen15"
                    android:text="@string/departureTime"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <TextView
                    style="@style/WrapWrap"
                    android:background="@color/whiteColors"
                    android:paddingLeft="@dimen/dimen5"
                    android:paddingRight="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen8"
                    android:text="@string/xing"
                    android:textColor="@color/redColors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_departureTime"
                    style="@style/AutoMatch"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/pleaseSelect"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize15" />

                <ImageView
                    style="@style/WrapWrap"
                    android:paddingRight="@dimen/dimen15"
                    android:src="@mipmap/arrow" />

            </LinearLayout>

            <include layout="@layout/item_cost_instruction" />

            <EditText
                android:id="@+id/et_remark"
                style="@style/MatchWrap"
                android:layout_marginBottom="@dimen/dimen18"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="left|top"
                android:hint="@string/pleaseFillInRemarks"
                android:minHeight="@dimen/dimen85"
                android:padding="@dimen/dimen15"
                android:textColorHint="@color/byTheDayHintColors"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize15" />

            <include layout="@layout/common_bottombar" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>