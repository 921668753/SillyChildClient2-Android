<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_countries"
    style="@style/MatchWrap"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_citySelect"
        android:layout_width="@dimen/dimen3"
        android:layout_height="@dimen/dimen16"
        android:layout_marginLeft="@dimen/dimen22"
        android:layout_marginRight="@dimen/dimen8"
        android:src="@mipmap/cityselect" />


    <TextView
        android:id="@+id/tv_country"
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/dimen13"
        android:layout_marginBottom="@dimen/dimen13"
        android:text="韩国"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize13"
        android:textStyle="bold" />

</LinearLayout>