<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:paddingBottom="@dimen/dimen10"
            android:paddingLeft="@dimen/dimen15"
            android:paddingTop="@dimen/dimen15"
            android:text="@string/selectModels"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize13" />


        <TextView
            style="@style/WrapWrap"
            android:background="@color/whiteColors"
            android:paddingLeft="@dimen/dimen5"
            android:paddingTop="@dimen/dimen10"
            android:text="@string/xing"
            android:textColor="@color/redColors"
            android:textSize="@dimen/textsize13" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_selectModels"
        style="@style/MatchWrap"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selectModels"
            style="@style/AutoWrap"
            android:hint="@string/selectFew"
            android:paddingBottom="@dimen/dimen15"
            android:paddingLeft="@dimen/dimen15"
            android:paddingTop="@dimen/dimen7"
            android:textColor="@color/tabColors"
            android:textColorHint="@color/byTheDayHintColors"
            android:textSize="@dimen/textsize16" />

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/WrapWrap"
            android:paddingRight="@dimen/dimen15"
            android:src="@mipmap/arrow"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>