<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen80"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dimen15"
    android:paddingRight="@dimen/dimen15">

    <ImageView
        style="@style/WrapWrap"
        android:src="@mipmap/default_image"/>

    <LinearLayout
        style="@style/AutoWrap"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen15">
        <TextView
            style="@style/WrapWrap"
            android:id="@+id/tv_goodname"
            android:text="温碧泉旗舰店"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize14"/>
        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen8"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_goodcollectionnumber"
                style="@style/WrapWrap"
                android:text="180"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/hintColors"/>
            <TextView
                style="@style/WrapWrap"
                android:text="@string/personCollection"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/hintColors"/>
            <TextView
                style="@style/WrapWrap"
                android:text="@string/synthesiseScore"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/hintColors"
                android:layout_marginLeft="@dimen/dimen20"/>
            <TextView
                android:id="@+id/tv_goodscore"
                style="@style/WrapWrap"
                android:text="9.6"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/guideShapeColors"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/WrapWrap"
        android:src="@mipmap/arrow"
        android:layout_marginLeft="@dimen/dimen15"/>

</LinearLayout>