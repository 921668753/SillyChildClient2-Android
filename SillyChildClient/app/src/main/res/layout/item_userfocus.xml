<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/dimen41"
        android:layout_height="@dimen/dimen41"
        android:layout_marginBottom="@dimen/dimen13"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen13"
        android:src="@mipmap/avatar" />


    <LinearLayout
        style="@style/AutoMatch"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10">

        <TextView
            android:id="@+id/tv_nickName"
            style="@style/MatchWrap"
            android:singleLine="true"
            android:text="薄荷味的夏天"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />


        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_diary"
                style="@style/WrapWrap"
                android:text="32"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/textsize10" />

            <TextView
                style="@style/WrapWrap"
                android:text="@string/diary"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/textsize10" />


            <TextView
                android:id="@+id/tv_fan"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen13"
                android:text="32"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/textsize10" />

            <TextView
                style="@style/WrapWrap"
                android:text="@string/fan"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/textsize10" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_followed"
        android:layout_width="@dimen/dimen69"
        android:layout_height="@dimen/dimen27"
        android:layout_marginRight="@dimen/dimen15"
        android:background="@drawable/shape_followed"
        android:gravity="center"
        android:text="@string/followed"
        android:textColor="@color/tabColors"
        android:textSize="@dimen/textsize12" />

</LinearLayout>