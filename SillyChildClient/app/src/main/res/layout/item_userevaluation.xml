<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_userevaluation1"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dimen25"
            android:layout_height="@dimen/dimen25"
            android:layout_marginLeft="@dimen/dimen17"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/tv_nickName"
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen6"
            android:text="用户昵称"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize10" />


        <ImageView
            android:id="@+id/img_satisfactionLevel"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen29"
            android:src="@mipmap/comment_star_one" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        style="@style/MatchWrap"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen30"
        android:paddingRight="@dimen/dimen30"
        android:paddingTop="@dimen/dimen10"
        android:text="如果你无法表达的你的想法，那么说明你还不够了解它，如果你无法表达的你的想法。"
        android:textColor="@color/tabColors"
        android:textSize="@dimen/textsize12" />

    <com.common.cklibrary.utils.myview.NoScrollGridView
        android:id="@+id/gv_imgComments"
        style="@style/MatchWrap"
        android:layout_marginBottom="@dimen/dimen10"
        android:layout_marginLeft="@dimen/dimen29"
        android:layout_marginRight="@dimen/dimen29"
        android:background="@color/whiteColors"
        android:horizontalSpacing="@dimen/dimen15"
        android:numColumns="3"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dimen10"
        android:visibility="gone"
        tools:listitem="@layout/item_imgcomment" />

    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            style="@style/AutoWrap"
            android:paddingLeft="@dimen/dimen30"
            android:text="2018.03.06"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize9" />

        <LinearLayout
            android:id="@+id/ll_giveLike"
            style="@style/WrapWrap"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen10"
            android:paddingLeft="@dimen/dimen10">

            <ImageView
                android:id="@+id/img_giveLike"
                android:layout_width="@dimen/dimen15"
                android:layout_height="@dimen/dimen15"
                android:src="@mipmap/dynamic_zan" />

            <TextView
                android:id="@+id/tv_zanNum"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen3"
                android:paddingRight="@dimen/dimen30"
                android:text="@string/giveLike"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/textsize11" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>