<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    style="@style/Match50"
    android:background="@color/whiteColors"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dimen15">

    <TextView
        android:id="@+id/tv_cancelOrder"
        style="@style/Match9035"
        android:background="@drawable/shape_goodbtn"
        android:gravity="center"
        android:text="@string/cancelOrder"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize15"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_payment"
        style="@style/Match9035"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/shape_goodbtn"
        android:gravity="center"
        android:text="@string/payment"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize15"
        android:visibility="visible" />


    <TextView
        android:id="@+id/tv_remindDelivery"
        style="@style/Match9035"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/shape_goodbtn"
        android:gravity="center"
        android:text="@string/remindDelivery"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize15"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_checkLogistics"
        style="@style/Match9035"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/shape_goodbtn"
        android:gravity="center"
        android:text="@string/checkLogistics"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize15"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_confirmReceipt"
        style="@style/Match9035"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/shape_goodbtn"
        android:gravity="center"
        android:text="@string/confirmReceipt"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize15"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_appraiseOrder"
        style="@style/Match9035"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/shape_goodbtn"
        android:gravity="center"
        android:text="@string/appraiseOrder"
        android:textColor="@color/greenColors"
        android:textSize="@dimen/textsize15"
        android:visibility="gone" />

</LinearLayout>