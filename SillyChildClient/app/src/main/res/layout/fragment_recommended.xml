<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen4">

    <TextView
        style="@style/MatchWrap"
        android:background="@color/whiteColors"
        android:paddingLeft="@dimen/dimen13"
        android:paddingTop="@dimen/dimen11"
        android:text="@string/popularDestination"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize14" />

    <FrameLayout
        style="@style/MatchMatch"
        android:background="@color/whiteColors">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:paddingLeft="@dimen/dimen12"
            style="@style/MatchMatch" />

        <com.common.cklibrary.utils.myview.IndexNewBar
            android:id="@+id/indexBar"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dimen130"
            android:layout_marginTop="@dimen/dimen130"
            app:indexBarPressBackground="@color/partTranslucent"
            app:indexBarTextSize="@dimen/textsize10" />
    </FrameLayout>

</LinearLayout>