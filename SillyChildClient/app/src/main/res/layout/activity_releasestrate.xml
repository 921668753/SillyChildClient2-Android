<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:id="@+id/ll_allactivity"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <ScrollView style="@style/MatchAuto">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen24">

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_title"
                    style="@style/MatchWrap"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:hint="@string/fillTitle"
                    android:minHeight="@dimen/dimen45"
                    android:paddingLeft="@dimen/dimen15"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintColors"
                    android:textSize="@dimen/textsize15" />

                <include layout="@layout/common_dividerwidth1" />

                <LinearLayout
                    android:id="@+id/ll_selectdistrict"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen45"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_selectdistrict"
                        style="@style/AutoMatch"
                        android:background="@color/whiteColors"
                        android:gravity="center_vertical"
                        android:hint="@string/selectDistrict"
                        android:paddingLeft="@dimen/dimen15"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/hintColors"
                        android:textSize="@dimen/textsize15" />

                    <ImageView
                        style="@style/WrapMatch"
                        android:layout_marginRight="@dimen/dimen15"
                        android:src="@mipmap/minearrowxxx" />
                </LinearLayout>

                <include layout="@layout/common_dividerwidth1" />

                <EditText
                    android:id="@+id/et_profile"
                    style="@style/MatchWrap"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:hint="@string/fillProfile"
                    android:minHeight="@dimen/dimen45"
                    android:paddingLeft="@dimen/dimen15"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintColors"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>

            <TextView
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/lightYellowColor"
                android:gravity="center"
                android:padding="@dimen/dimen5"
                android:text="@string/strategyLongPressDelete"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize11" />

            <LinearLayout
                android:id="@+id/addlayout"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_newview"
                style="@style/MatchWrap"
                android:orientation="horizontal"
                android:padding="@dimen/dimen15"
                android:gravity="center"
                android:background="@color/whiteColors">
                <ImageView
                    android:id="@+id/iv_newview"
                    android:layout_width="@dimen/dimen20"
                    android:layout_height="@dimen/dimen20"
                    android:src="@mipmap/mine_release_addxxx"/>
                <TextView
                    android:id="@+id/tv_newview"
                    style="@style/WrapWrap"
                    android:text="@string/newAddition"
                    android:paddingLeft="@dimen/dimen10"
                    android:textSize="@dimen/textsize15"
                    android:textColor="@color/hintColors"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen61"
        android:orientation="vertical"
        android:background="@color/whiteColors">
        <View
            style="@style/DividerWidth"/>
        <TextView
            android:id="@+id/tv_release"
            style="@style/MatchMatch"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_marginBottom="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/shape_login1"
            android:gravity="center"
            android:text="@string/release"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize16"/>
    </LinearLayout>
    
</LinearLayout>