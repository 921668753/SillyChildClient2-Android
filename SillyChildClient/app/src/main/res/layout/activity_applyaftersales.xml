<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView style="@style/DividerWidth" />

    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Match50"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <ImageView
                    android:id="@+id/img_waitSending"
                    style="@style/Image20"
                    android:src="@mipmap/order_after_sale_icon" />

                <TextView
                    android:id="@+id/tv_waitSending"
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/applyAfterSales"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize14" />


            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/orderNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_orderCode"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="201804291350"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/submitTime"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_submitTime"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="2018-04-29 13:50"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match50"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen15"
                    android:text="@string/afterType"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />


                <LinearLayout
                    android:id="@+id/ll_afterType"
                    style="@style/MatchMatch"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/shape_express"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_afterType"
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen15"
                        android:text="@string/pleaseSelect"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize13" />

                    <ImageView
                        android:layout_width="@dimen/dimen7"
                        android:layout_height="@dimen/dimen7"
                        android:layout_marginRight="@dimen/dimen15"
                        android:src="@mipmap/shop_down_arrow" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Match50"
                android:layout_marginTop="@dimen/dimen5"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen15"
                    android:text="@string/afterNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />


                <LinearLayout
                    android:id="@+id/ll_afterNumber"
                    style="@style/MatchMatch"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/shape_express"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_afterNumber"
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen15"
                        android:text="@string/pleaseSelect"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize13" />

                    <ImageView
                        android:layout_width="@dimen/dimen7"
                        android:layout_height="@dimen/dimen7"
                        android:layout_marginRight="@dimen/dimen15"
                        android:src="@mipmap/shop_down_arrow" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Match50"
                android:layout_marginTop="@dimen/dimen5"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen15"
                    android:text="@string/refundAmount"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />


                <LinearLayout
                    style="@style/MatchMatch"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/shape_express"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/WrapWrap"
                        android:paddingLeft="@dimen/dimen15"
                        android:text="@string/renminbi"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize13" />

                    <TextView
                        android:id="@+id/tv_refundAmount"
                        style="@style/AutoWrap"
                        android:text="1314.00"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize13" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/Match50"
                android:layout_marginTop="@dimen/dimen5"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen15"
                    android:text="@string/afterWhy"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />


                <LinearLayout
                    android:id="@+id/ll_afterWhy"
                    style="@style/MatchMatch"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/shape_express"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_afterWhy"
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen15"
                        android:text="@string/pleaseSelect"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize13" />

                    <ImageView
                        android:layout_width="@dimen/dimen7"
                        android:layout_height="@dimen/dimen7"
                        android:layout_marginRight="@dimen/dimen15"
                        android:src="@mipmap/shop_down_arrow" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/et_accountAfterSalesService"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen150"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="start"
                android:hint="@string/accountAfterSalesService"
                android:padding="@dimen/dimen15"
                android:textColor="@color/titletextcolors"
                android:textColorHint="@color/hintColors"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize12" />


            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40"
                android:layout_marginBottom="@dimen/dimen14"
                android:layout_marginLeft="@dimen/dimen73"
                android:layout_marginRight="@dimen/dimen73"
                android:layout_marginTop="@dimen/dimen15"
                android:background="@drawable/shape_determinepay"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize16" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>