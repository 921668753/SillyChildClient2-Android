<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dimen64"
            android:layout_height="@dimen/dimen52"
            android:layout_marginBottom="@dimen/dimen24"
            android:layout_marginTop="@dimen/dimen24"
            android:src="@mipmap/placeholderfigure1" />

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen15">

            <TextView
                android:id="@+id/tv_name"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen16"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize17" />

            <ImageView
                android:id="@+id/img_starLevel"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen7"
                android:src="@mipmap/arrow" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/WrapWrap"
                    android:text="荷兰村"
                    android:textColor="@color/gastronomyAddressColors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    android:id="@+id/tv_label"
                    style="@style/WrapWrap"
                    android:background="@drawable/shape_gastronomy"
                    android:paddingBottom="@dimen/dimen3"
                    android:paddingLeft="@dimen/dimen4"
                    android:paddingRight="@dimen/dimen4"
                    android:paddingTop="@dimen/dimen3"
                    android:text="咖啡"
                    android:textColor="@color/blueColors"
                    android:textSize="@dimen/textsize11" />

                <TextView
                    android:id="@+id/tv_distance"
                    style="@style/AutoWrap"
                    android:text="1.8km"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/common_dividerwidth1" />
</LinearLayout>