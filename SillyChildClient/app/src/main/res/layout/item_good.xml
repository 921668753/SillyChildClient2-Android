<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen130"
    android:background="@color/whiteColors"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen12">

    <ImageView
        android:id="@+id/img_good"
        android:layout_width="@dimen/dimen83"
        android:layout_height="@dimen/dimen97"
        android:scaleType="fitXY"
        android:src="@mipmap/placeholderfigure1" />

    <LinearLayout
        style="@style/AutoWrap"
        android:layout_marginLeft="@dimen/dimen13"
        android:orientation="vertical">

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goodName"
                style="@style/AutoWrap"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="纪梵希Givenchy禁忌之吻口红纪梵希Givenchy禁忌之吻口红纪梵希Givenchy禁忌之吻口红"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize13" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/dimen42"
                android:layout_height="@dimen/dimen18"
                android:layout_marginLeft="@dimen/dimen20"
                android:layout_marginRight="@dimen/dimen30"
                android:paddingLeft="@dimen/dimen14"
                android:paddingRight="@dimen/dimen14"
                android:scaleType="fitXY"
                android:src="@mipmap/collection_delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_goodSynopsis"
            style="@style/WrapWrap"
            android:paddingTop="@dimen/dimen4"
            android:singleLine="true"
            android:text="漆光唇膏黑色口红"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize12" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen18"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money"
                style="@style/AutoWrap"
                android:layout_marginTop="@dimen/dimen4"
                android:singleLine="true"
                android:text="￥429.00"
                android:textColor="@color/fF5656Colors"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_shoppingCart"
                android:layout_width="@dimen/dimen79"
                android:layout_height="@dimen/dimen25"
                android:layout_marginRight="@dimen/dimen12"
                android:background="@drawable/shape_collection_good"
                android:gravity="center"
                android:text="@string/addShoppingCart"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>