<?xml version="1.0" encoding="utf-8"?>
<cn.bingoogolapple.swipeitemlayout.BGASwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_myShoppingCart"
    style="@style/MatchWrap"
    app:bga_sil_bottomMode="pullOut"
    app:bga_sil_springDistance="@dimen/dimen20"
    app:bga_sil_swipeDirection="left">

    <!-- BGASwipeItemLayout 的 layout_marginLeft 设置成了 2dp，以便触发滑动返回 -->

    <!--<LinearLayout style="@style/WrapMatch.Horizontal">-->

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/dimen68"
        android:layout_height="match_parent"
        android:background="@color/fF0000Colors"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/whiteColors"
        android:textSize="@dimen/textsize17" />
    <!--</LinearLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen108"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dimen10">


        <ImageView
            android:id="@+id/img_checkbox"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen60"
            android:paddingBottom="@dimen/dimen20"
            android:paddingRight="@dimen/dimen11"
            android:paddingLeft="@dimen/dimen11"
            android:paddingTop="@dimen/dimen20"
            android:src="@mipmap/shopping_cart_unselected" />


        <ImageView
            android:id="@+id/img_good"
            android:layout_width="@dimen/dimen81"
            android:layout_height="@dimen/dimen81"
            android:background="@drawable/shape_boutiqueline"
            android:padding="@dimen/dimen1"
            android:scaleType="fitXY"
            android:src="@mipmap/placeholderfigure1" />

        <LinearLayout
            style="@style/MatchMatch"
            android:layout_marginLeft="@dimen/dimen13"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen14">

            <TextView
                android:id="@+id/tv_goodName"
                style="@style/MatchWrap"
                android:singleLine="true"
                android:text="纪梵希 Givench 禁忌\n之吻口红纪梵希纪梵希纪梵希纪梵希"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_goodSynopsis"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen8"
                android:singleLine="true"
                android:text="纪梵希 Givench 禁忌之吻口红"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize12" />


            <LinearLayout
                style="@style/MatchMatch"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/renminbi"
                    android:textColor="@color/fF3542Colors"
                    android:textSize="@dimen/textsize15" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/AutoWrap"
                    android:singleLine="true"
                    android:text="429"
                    android:textColor="@color/fF3542Colors"
                    android:textSize="@dimen/textsize15" />

                <LinearLayout
                    android:layout_width="@dimen/dimen85"
                    android:layout_height="@dimen/dimen25"
                    android:background="@drawable/shape_addshoppingcarte"
                    android:minWidth="@dimen/dimen85"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_subtract"
                        android:layout_width="@dimen/dimen23"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/subtract"
                        android:textColor="@color/bEBEBEColors"
                        android:textSize="@dimen/textsize15" />

                    <View style="@style/DividerHeight" />

                    <TextView
                        android:id="@+id/tv_goodNumber"
                        style="@style/AutoMatch"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize15" />

                    <View style="@style/DividerHeight" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="@dimen/dimen23"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/add"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</cn.bingoogolapple.swipeitemlayout.BGASwipeItemLayout>







