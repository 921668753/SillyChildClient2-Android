<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="horizontal"
    android:padding="@dimen/dimen15">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/dimen35"
        android:layout_height="@dimen/dimen35"
        android:src="@mipmap/avatar_default" />

    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen10">

        <TextView
            android:id="@+id/tv_name"
            style="@style/WrapWrap"
            android:singleLine="true"
            android:text="11111"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen10"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen14"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                style="@style/WrapWrap"
                android:text="2017-10-19"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize10" />

            <TextView style="@style/AutoWrap" />

            <TextView
                android:id="@+id/tv_revert1"
                style="@style/WrapWrap"
                android:paddingLeft="@dimen/dimen10"
                android:text="@string/revert1"
                android:textColor="@color/grayColors"
                android:textSize="@dimen/textsize13" />


            <ImageView
                android:id="@+id/img_favor"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen14"
                android:paddingLeft="@dimen/dimen5"
                android:paddingRight="@dimen/dimen6"
                android:src="@mipmap/btn_favor_normal" />


            <TextView
                style="@style/WrapWrap"
                android:text="@string/zan"
                android:textColor="@color/grayColors"
                android:textSize="@dimen/textsize13" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_replies"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen15"
            android:background="#F5F6F7"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen13"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen13">

            <com.common.cklibrary.utils.myview.ChildListView
                android:id="@+id/lv_replies"
                style="@style/MatchWrap"
                android:divider="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:listitem="@layout/item_dynamicsdetailsreplies" />

            <include layout="@layout/item_dynamicsdetailsreplies" />

            <LinearLayout
                android:id="@+id/ll_revertNum"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen11"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/general"
                    android:textColor="@color/greenColors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    android:id="@+id/tv_revertNum"
                    style="@style/WrapWrap"
                    android:text="6"
                    android:textColor="@color/greenColors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/reply"
                    android:textColor="@color/greenColors"
                    android:textSize="@dimen/textsize12" />

                <ImageView
                    style="@style/WrapWrap"
                    android:src="@mipmap/ic_arrow" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

