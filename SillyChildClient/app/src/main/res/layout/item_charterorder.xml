<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/whiteColors"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen13"
        android:paddingRight="@dimen/dimen18"
        android:paddingTop="@dimen/dimen12">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen21"
            android:text="@string/orderNumber1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/tv_orderNumber"
            style="@style/AutoWrap"
            android:singleLine="true"
            android:text="201707050236"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/tv_charterStatus"
            style="@style/WrapWrap"
            android:text="待付款"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize12" />

    </LinearLayout>


    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen1"
        android:background="@color/whiteColors"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen16"
        android:paddingLeft="@dimen/dimen18"
        android:paddingRight="@dimen/dimen18"
        android:paddingTop="@dimen/dimen16">

        <ImageView
            android:id="@+id/img_charterOrder"
            android:layout_width="@dimen/dimen81"
            android:layout_height="@dimen/dimen70"
            android:scaleType="fitXY"
            android:src="@mipmap/placeholderfigure" />

        <LinearLayout
            style="@style/MatchMatch"
            android:layout_marginLeft="@dimen/dimen15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen2"
                android:singleLine="true"
                android:text="东京1日 包车游"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_serviceTime"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen6"
                android:singleLine="true"
                android:text="服务时间"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize11" />

            <TextView
                android:id="@+id/tv_serviceCompany"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen6"
                android:singleLine="true"
                android:text="服务司导"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize11" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen37"
        android:layout_marginTop="@dimen/dimen1"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen20"
            android:text="@string/orderPrice"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize13" />

        <TextView
            android:id="@+id/tv_orderMoney"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen24"
            android:singleLine="true"
            android:text="¥550.00"
            android:textColor="@color/fF5656Colors"
            android:textSize="@dimen/textsize14" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen37"
        android:layout_marginTop="@dimen/dimen1"
        android:background="@color/whiteColors"
        android:gravity="center_vertical">

        <TextView
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen20"
            android:text="@string/actualPaymentInCart"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize13" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen21"
            android:singleLine="true"
            android:text="¥550.00"
            android:textColor="@color/fF5656Colors"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/whiteColors"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirmPayment"
            android:layout_width="@dimen/dimen93"
            android:layout_height="@dimen/dimen29"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@drawable/shape_confirmpayment"
            android:gravity="center"
            android:text="@string/confirmPayment"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize12" />


        <TextView
            android:id="@+id/tv_callUp"
            android:layout_width="@dimen/dimen80"
            android:layout_height="@dimen/dimen29"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@drawable/shape_confirmpayment"
            android:gravity="center"
            android:text="@string/callUp"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize12"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_sendPrivateChat"
            android:layout_width="@dimen/dimen80"
            android:layout_height="@dimen/dimen29"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@drawable/shape_confirmpayment"
            android:gravity="center"
            android:text="@string/sendPrivateChat"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_appraiseOrder"
            android:layout_width="@dimen/dimen93"
            android:layout_height="@dimen/dimen29"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@drawable/shape_confirmpayment"
            android:gravity="center"
            android:text="@string/appraiseOrder"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_additionalComments"
            android:layout_width="@dimen/dimen93"
            android:layout_height="@dimen/dimen29"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@drawable/shape_confirmpayment"
            android:gravity="center"
            android:text="@string/additionalComments"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize12"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
