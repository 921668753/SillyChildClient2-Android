<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:hint="@string/hintPassword1Text"
        android:textColorHint="@color/hintColors"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen14"
        android:singleLine="true"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen10"/>

    <include layout="@layout/common_dividerwidth1"/>

    <EditText
        android:id="@+id/et_pwdagain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:hint="@string/hintPassword2Text"
        android:textColorHint="@color/hintColors"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen14"
        android:singleLine="true"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"/>

    <View style="@style/DividerWidth" />

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@drawable/shape_login1"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginLeft="@dimen/dimen15"
        android:gravity="center"
        android:text="@string/confirmChange"
        android:textColor="@color/whiteColors"
        android:textSize="@dimen/textsize16"/>

</LinearLayout>