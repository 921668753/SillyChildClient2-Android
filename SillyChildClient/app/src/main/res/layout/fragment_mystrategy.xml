<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mRefreshLayout"
        style="@style/MatchAuto">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            style="@style/MatchMatch"
            android:layout_marginTop="@dimen/dimen5"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/dimen2"
            android:paddingRight="@dimen/dimen2"
            android:scrollbars="none"
            tools:listitem="@layout/item_mystrategy" />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <include layout="@layout/common_error" />

    <TextView
        android:layout_width="@dimen/dimen195"
        android:layout_height="@dimen/dimen40"
        android:layout_marginBottom="@dimen/dimen25"
        android:layout_marginTop="@dimen/dimen25"
        android:background="@drawable/shape_newstrategy"
        android:gravity="center"
        android:text="@string/newStrategy"
        android:textColor="@color/whiteColors"
        android:textSize="@dimen/textsize15" />


</LinearLayout>