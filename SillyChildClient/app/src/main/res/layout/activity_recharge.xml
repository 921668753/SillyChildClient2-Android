<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">

            <TextView
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10"
                android:text="@string/rechargeAmount"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize14" />

            <View style="@style/DividerWidth" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10">

                <LinearLayout
                    style="@style/AutoWrap"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money100"
                        style="@style/Match58"
                        android:background="@color/greenColors"
                        android:gravity="center"
                        android:text="@string/money100"
                        android:textColor="@color/whiteColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_money500"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money500"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_money3000"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money3000"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>

                <LinearLayout
                    style="@style/AutoWrap"
                    android:layout_marginLeft="@dimen/dimen30"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money200"
                        style="@style/Match58"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money200"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_money1000"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money1000"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_money5000"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money5000"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>

                <LinearLayout
                    style="@style/AutoWrap"
                    android:layout_marginLeft="@dimen/dimen30"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money300"
                        style="@style/Match58"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money300"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_money2000"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/money2000"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_moneyOther"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/moneyOther"
                        android:textColor="@color/greenColors"
                        android:textSize="@dimen/textsize15" />

                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/et_pleaseRechargeAmount"
                style="@style/Match45"
                android:background="@color/whiteColors"
                android:hint="@string/pleaseRechargeAmount"
                android:inputType="number|numberDecimal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:textColor="@color/titletextcolors"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize15"
                android:visibility="gone" />


            <TextView
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:text="@string/optionPay"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize14" />


            <TextView style="@style/DividerWidth" />

            <LinearLayout
                android:id="@+id/ll_payweixin"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen34"
                    android:layout_height="@dimen/dimen34"
                    android:layout_marginBottom="@dimen/dimen13"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen13"
                    android:src="@mipmap/weixin_payxxx" />

                <TextView
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/weChatPay"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <ImageView
                    android:id="@+id/iv_weChatPay"
                    android:layout_width="@dimen/dimen48"
                    android:layout_height="@dimen/dimen48"
                    android:padding="@dimen/dimen15"
                    android:src="@mipmap/top_ups_selected" />

            </LinearLayout>


            <TextView style="@style/DividerWidth" />

            <LinearLayout
                android:id="@+id/ll_payzfb"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen34"
                    android:layout_height="@dimen/dimen34"
                    android:layout_marginBottom="@dimen/dimen13"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen13"
                    android:src="@mipmap/mine_zfbxxx" />

                <TextView
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/alipayToPay"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <ImageView
                    android:id="@+id/iv_alipayToPay"
                    android:layout_width="@dimen/dimen48"
                    android:layout_height="@dimen/dimen48"
                    android:padding="@dimen/dimen15"
                    android:src="@mipmap/top_ups_unselected" />

            </LinearLayout>

            <TextView style="@style/DividerWidth" />

            <LinearLayout
                android:id="@+id/ll_payyl"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dimen37"
                    android:layout_height="@dimen/dimen21"
                    android:layout_marginBottom="@dimen/dimen20"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen20"
                    android:src="@mipmap/mine_unionpayxxx" />

                <TextView
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/unionpayPay"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />

                <ImageView
                    android:id="@+id/iv_unionpayPay"
                    android:layout_width="@dimen/dimen48"
                    android:layout_height="@dimen/dimen48"
                    android:padding="@dimen/dimen15"
                    android:src="@mipmap/top_ups_unselected" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_determinePay"
                style="@style/Match44"
                android:layout_marginBottom="@dimen/dimen41"
                android:layout_marginLeft="@dimen/dimen72"
                android:layout_marginRight="@dimen/dimen72"
                android:layout_marginTop="@dimen/dimen20"
                android:background="@drawable/shape_determinepay"
                android:gravity="center"
                android:text="@string/determinePay"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize16" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>