<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/whiteColors"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        style="@style/MatchMatch"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_moreClassification"
            style="@style/AutoWrap"
            android:divider="@color/whiteColors"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/item_moreclassification" />

        <TextView
            style="@style/DividerHeight"
            android:layout_marginLeft="@dimen/dimen2" />

        <GridView
            android:id="@+id/gv_classification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="@android:color/white"
            android:horizontalSpacing="@dimen/dimen15"
            android:numColumns="2"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/dimen35"
            android:paddingRight="@dimen/dimen25"
            android:paddingTop="@dimen/dimen15"
            android:scrollbars="none"
            android:verticalSpacing="0dp"
            tools:listitem="@layout/item_classification" />


    </LinearLayout>

</LinearLayout>