<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen282"
        android:layout_height="@dimen/dimen160"
        android:background="@drawable/shape_vippermissions"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_tsword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompting"
            android:paddingTop="@dimen/dimen18"
            android:paddingBottom="@dimen/dimen18"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_content"
            style="@style/MatchAuto"
            android:gravity="center"
            android:textColor="@color/phonestrcolor"
            android:textSize="@dimen/textsize14"
            android:paddingRight="@dimen/dimen15"
            android:paddingLeft="@dimen/dimen15"/>

        <TextView
            android:id="@+id/tv_contentsmall"
            style="@style/WrapWrap"
            android:gravity="center"
            android:text="@string/saveCoordinate"
            android:textColor="@color/phonestrcolor"
            android:textSize="@dimen/textsize10"
            android:paddingRight="@dimen/dimen15"
            android:paddingLeft="@dimen/dimen15"
            android:paddingBottom="@dimen/dimen5"
            android:visibility="gone"/>

        <View style="@style/DividerWidth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen43"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/AutoMatch"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/dimen15" />

            <View style="@style/DividerHeight" />

            <TextView
                android:id="@+id/tv_call"
                style="@style/AutoMatch"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/blueColors"
                android:textSize="@dimen/dimen15" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>