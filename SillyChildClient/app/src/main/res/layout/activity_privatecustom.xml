<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner_ad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen166"
                android:layout_marginTop="@dimen/dimen6"
                android:background="@mipmap/home_banner"
                app:banner_pageChangeDuration="2000"
                app:banner_pointAutoPlayAble="false"
                app:banner_pointContainerBackground="@android:color/transparent"
                app:banner_pointDrawable="@drawable/bga_banner_selector_point"
                app:banner_pointTopBottomMargin="@dimen/dimen2"
                app:banner_transitionEffect="alpha" />


            <TextView
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen20"
                android:paddingLeft="@dimen/dimen19"
                android:paddingRight="@dimen/dimen19"
                android:paddingTop="@dimen/dimen20"
                android:text="私人订制说明私人定制说明私人订制说明私人定制说明私人订制说明私人定制说明私人订制说明私人定制说明私人订制说明私人定制说明私人订制说明私人定制说明私人订制说明私人定制说明"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize11" />

            <LinearLayout
                style="@style/Match45"
                android:layout_marginTop="@dimen/dimen6"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/AutoWrap"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen17">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/travelTime"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize12" />

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginTop="@dimen/dimen4"
                        android:text="@string/selectTravelTime"
                        android:textColor="@color/hintColors"
                        android:textSize="@dimen/textsize9" />

                </LinearLayout>


                <ImageView
                    style="@style/Image610"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen33"
                    android:src="@mipmap/arrow1" />


            </LinearLayout>


            <LinearLayout
                style="@style/Match45"
                android:layout_marginTop="@dimen/dimen1"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen17"
                    android:text="@string/destination"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize12" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:hint="@string/pleaseFillDestination"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen33"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintColors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize12" />


            </LinearLayout>


            <LinearLayout
                style="@style/Match45"
                android:layout_marginTop="@dimen/dimen1"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen17"
                    android:text="@string/playNumberDays"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize12" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:hint="@string/playNumberDays1"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen33"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintColors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize12" />


            </LinearLayout>


            <LinearLayout
                style="@style/Match45"
                android:layout_marginTop="@dimen/dimen1"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen17"
                    android:text="@string/travelPreferences"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

                <ImageView
                    style="@style/Image610"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen33"
                    android:src="@mipmap/arrow1" />


            </LinearLayout>


            <LinearLayout
                style="@style/Match45"
                android:layout_marginTop="@dimen/dimen1"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen17"
                    android:text="@string/recommendRestaurant"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

                <ImageView
                    style="@style/Image610"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen33"
                    android:src="@mipmap/arrow1" />


            </LinearLayout>


            <LinearLayout
                style="@style/Match45"
                android:layout_marginTop="@dimen/dimen1"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen17"
                    android:text="@string/recommendedAccommodation"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

                <ImageView
                    style="@style/Image610"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen33"
                    android:src="@mipmap/arrow1" />


            </LinearLayout>

            <EditText
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="left"
                android:hint="@string/remark1"
                android:minHeight="@dimen/dimen101"
                android:paddingBottom="@dimen/dimen12"
                android:paddingLeft="@dimen/dimen17"
                android:paddingRight="@dimen/dimen33"
                android:paddingTop="@dimen/dimen12"
                android:textColor="@color/textColor"
                android:textColorHint="@color/hintColors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:layout_width="@dimen/dimen151"
                android:layout_height="@dimen/dimen31"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_displaypage"
                android:layout_marginBottom="@dimen/dimen19"
                android:layout_marginTop="@dimen/dimen30"
                android:text="@string/customizedItinerary"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize14" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>