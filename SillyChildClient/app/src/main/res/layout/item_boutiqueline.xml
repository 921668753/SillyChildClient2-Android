<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@drawable/shape_boutiqueline"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_boutiqueLine"
        style="@style/MatchWrap"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/dimen1"
        android:paddingRight="@dimen/dimen1"
        android:paddingTop="@dimen/dimen1"
        android:src="@mipmap/placeholderfigure" />


    <TextView
        android:id="@+id/tv_boutiqueLineTitle"
        style="@style/MatchWrap"
        android:paddingBottom="@dimen/dimen6"
        android:paddingLeft="@dimen/dimen7"
        android:paddingRight="@dimen/dimen7"
        android:paddingTop="@dimen/dimen10"
        android:text="意大利豪华10日游意大利豪华10日游意大利豪华10日游意大利豪华10日游意大利豪华10日游意大利豪华10日游"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize11" />

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/MatchWrap"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen7"
        android:paddingRight="@dimen/dimen7"
        android:text="线路简介线路简介线路简介线路简介线路简介"
        android:textColor="@color/hintColors"
        android:textSize="@dimen/textsize11" />


    <LinearLayout
        style="@style/MatchWrap"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money"
            style="@style/AutoWrap"
            android:paddingBottom="@dimen/dimen10"
            android:paddingLeft="@dimen/dimen7"
            android:text="--"
            android:textColor="@color/lightRedColors"
            android:textSize="@dimen/textsize11" />

        <TextView
            android:id="@+id/tv_score"
            style="@style/WrapWrap"
            android:paddingBottom="@dimen/dimen8"
            android:paddingRight="@dimen/dimen7"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/lightRedColors"
            android:textSize="@dimen/textsize11" />

    </LinearLayout>

</LinearLayout>