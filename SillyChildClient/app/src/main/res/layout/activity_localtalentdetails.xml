<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context="com.yinglan.scc.homepage.localtalent.LocalTalentDetailsActivity">

    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dimen209">-->

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen209"
                android:scaleType="fitXY"
                android:src="@mipmap/placeholderfigure"
                android:visibility="gone" />

            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen209" />

            <!--<ImageView-->
            <!--android:id="@+id/img_play"-->
            <!--android:layout_width="@dimen/dimen43"-->
            <!--android:layout_height="@dimen/dimen43"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@mipmap/play" />-->

            <!--</RelativeLayout>-->

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen15">

                <LinearLayout
                    style="@style/AutoWrap"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/WrapWrap"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/WrapWrap"
                            android:layout_marginRight="@dimen/dimen9"
                            android:text="--"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textsize16" />

                        <TextView
                            android:id="@+id/tv_shopkeepers"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen15"
                            android:layout_marginRight="@dimen/dimen8"
                            android:background="@drawable/shape_guidelabels"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen5"
                            android:paddingRight="@dimen/dimen5"
                            android:singleLine="true"
                            android:text="@string/shopkeepers"
                            android:textColor="@color/guideShapeColors"
                            android:textSize="@dimen/textsize10" />

                        <TextView
                            android:id="@+id/tv_landlord"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen15"
                            android:layout_marginRight="@dimen/dimen8"
                            android:background="@drawable/shape_landlord"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen5"
                            android:paddingRight="@dimen/dimen5"
                            android:singleLine="true"
                            android:text="@string/landlord"
                            android:textColor="@color/blueColors"
                            android:textSize="@dimen/textsize10" />

                        <TextView
                            android:id="@+id/tv_companyGuide"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen15"
                            android:background="@drawable/shape_code"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen5"
                            android:paddingRight="@dimen/dimen5"
                            android:singleLine="true"
                            android:text="@string/companyGuide"
                            android:textColor="@color/greenColors"
                            android:textSize="@dimen/textsize10" />

                        <TextView
                            android:id="@+id/tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen15"
                            android:background="@drawable/shape_userlabels"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen5"
                            android:paddingRight="@dimen/dimen5"
                            android:singleLine="true"
                            android:text="@string/user"
                            android:textColor="@color/userShapeColors"
                            android:textSize="@dimen/textsize10" />


                        <TextView
                            android:id="@+id/tv_platform"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen15"
                            android:background="@drawable/shape_code1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen5"
                            android:paddingRight="@dimen/dimen5"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/hintColors"
                            android:textSize="@dimen/textsize10" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/WrapWrap"
                        android:layout_marginRight="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen15"
                        android:singleLine="true"
                        android:text="--"
                        android:textColor="@color/hintColors"
                        android:textSize="@dimen/textsize13" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_zan"
                    style="@style/WrapWrap"
                    android:paddingBottom="@dimen/dimen15"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:paddingTop="@dimen/dimen15"
                    android:src="@mipmap/btn_favor_normal" />
                <!--btn_favor_pressed.png-->

                <TextView
                    android:id="@+id/tv_sort"
                    style="@style/WrapWrap"
                    android:singleLine="true"
                    android:text="179"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />

            </LinearLayout>

            <TextView style="@style/DividerWidth" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shopAround"
                    style="@style/AutoMatch"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen14"
                    android:paddingTop="@dimen/dimen14"
                    android:text="@string/shopAround"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    style="@style/DividerHeight"
                    android:layout_marginBottom="@dimen/dimen9"
                    android:layout_marginTop="@dimen/dimen9" />

                <TextView
                    android:id="@+id/tv_goToHouse"
                    style="@style/AutoMatch"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen14"
                    android:paddingTop="@dimen/dimen14"
                    android:text="@string/goToHouse"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    style="@style/DividerHeight"
                    android:layout_marginBottom="@dimen/dimen9"
                    android:layout_marginTop="@dimen/dimen9" />

                <TextView
                    android:id="@+id/tv_goForRide"
                    style="@style/AutoMatch"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen14"
                    android:paddingTop="@dimen/dimen14"
                    android:text="@string/goForRide"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <TextView style="@style/DividerWidth" />


            <WebView
                android:id="@+id/web_summary"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:scrollbars="none"
                android:verticalScrollbarPosition="@null" />


            <!--<TextView-->
            <!--android:id="@+id/tv_summary"-->
            <!--style="@style/MatchWrap"-->
            <!--android:layout_marginTop="@dimen/dimen10"-->
            <!--android:background="@color/whiteColors"-->
            <!--android:paddingBottom="@dimen/dimen25"-->
            <!--android:paddingLeft="@dimen/dimen15"-->
            <!--android:paddingRight="@dimen/dimen15"-->
            <!--android:paddingTop="@dimen/dimen25"-->
            <!--android:textColor="@color/tabColors"-->
            <!--android:textSize="@dimen/textsize15" />-->

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/img_back"
        style="@style/WrapWrap"
        android:padding="@dimen/dimen15"
        android:src="@mipmap/back2" />

</RelativeLayout>