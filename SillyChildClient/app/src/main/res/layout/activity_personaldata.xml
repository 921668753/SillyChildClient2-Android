<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <ScrollView
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen10">

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_personaldatashzh"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/sillyChildNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/tv_personalcode"
                    style="@style/AutoMatch"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="SHZ5200"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_personaldatatx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen70"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/headPortrait"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />

                <LinearLayout
                    style="@style/AutoWrap"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_personaltx"
                        android:layout_width="@dimen/dimen45"
                        android:layout_height="@dimen/dimen45"
                        android:scaleType="fitXY"
                        android:src="@mipmap/avatar" />
                </LinearLayout>

                <ImageView
                    style="@style/Image812"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:src="@mipmap/arrow" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth1" />

            <LinearLayout
                android:id="@+id/ll_personaldatanc"
                style="@style/Match50"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/nickname"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/tv_personalnickname"
                    style="@style/AutoWrap"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="粉红色叶子"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />

                <ImageView
                    style="@style/Image812"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:src="@mipmap/arrow" />
            </LinearLayout>

            <include layout="@layout/common_dividerwidth1" />


            <LinearLayout
                android:id="@+id/ll_personaldataxb"
                style="@style/Match50"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/gender"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_personalsex"
                    style="@style/AutoMatch"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="女"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />

                <ImageView
                    style="@style/Image812"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:src="@mipmap/arrow" />
            </LinearLayout>

            <include layout="@layout/common_dividerwidth1" />

            <LinearLayout
                android:id="@+id/ll_personaldatasr"
                style="@style/Match50"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/birthday"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_personalbirthday"
                    style="@style/AutoMatch"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="1990-07-07"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />


                <ImageView
                    style="@style/Image812"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:src="@mipmap/arrow" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth1" />

            <LinearLayout
                android:id="@+id/ll_personaldatadq"
                style="@style/Match50"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/atRegion"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/tv_personaldiqu"
                    style="@style/AutoMatch"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="上海闵行区"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />

                <ImageView
                    style="@style/Image812"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:src="@mipmap/arrow" />

            </LinearLayout>

            <include layout="@layout/common_dividerwidth1" />

            <LinearLayout
                android:id="@+id/ll_personaldatagxqm"
                style="@style/Match50"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/personalizedSignature"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_signature"
                    style="@style/AutoMatch"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />


                <ImageView
                    style="@style/Image812"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:src="@mipmap/arrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>